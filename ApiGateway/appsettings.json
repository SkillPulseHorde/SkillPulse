{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },


  "ReverseProxy": {
    "Routes": {
      
      "userServiceSwagger": {
        "ClusterId": "userService",
        "Match": {
          "Path": "/swagger/userservice/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/{**catch-all}" }
        ]
      },
      
      "users": {
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },

      
      "authServiceSwagger": {
        "ClusterId": "authService",
        "Match": {
          "Path": "/swagger/authservice/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/{**catch-all}" }
        ]
      },
      
      "auth": {
        "ClusterId": "AuthCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      }
      
    },
    
    
    "Clusters": {
      "usersCluster": {
        "Destinations": {
          "d1": { "Address": "http://userservice:8080" }
        }
      },

      "authCluster": {
        "Destinations": {
          "d1": { "Address": "http://authservice:8080" }
        }
      }
    }
  },
  
  
    "AllowedHosts": "*"
}
