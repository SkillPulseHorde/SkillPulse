{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },


  "ReverseProxy": {
    "Routes": {
      "userServiceSwagger": {
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/swagger/userservice/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/v1/{**catch-all}" }
        ]
      },
      
      "users": {
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      
      "assessmentServiceSwagger": {
        "ClusterId": "assessmentCluster",
        "Match": {
          "Path": "/swagger/assessmentservice/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/v1/{**catch-all}" }
        ]
      },

      "assessments": {
        "ClusterId": "assessmentCluster",
        "Match": {
          "Path": "/api/assessments/{**catch-all}"
        }
      }
    },
    
    
    "Clusters": {
      "usersCluster": {
        "Destinations": {
          "d1": { "Address": "http://userservice:8080" }
        }
      },
      "assessmentCluster": {
        "Destinations": {
          "d1": { "Address": "http://assessmentservice:8080" }
        }
      }
    }
  },
  
  
    "AllowedHosts": "*"
}
